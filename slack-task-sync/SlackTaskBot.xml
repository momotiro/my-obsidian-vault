      <Command>C:\Users\80036\AppData\Local\Programs\Python\Python313\pythonw.exe</Command>
      <Arguments>slack_task_bot.py --realtime</Arguments>
      <WorkingDirectory>c:\Users\80036\Documents\Obsidian Vault\slack-task-sync</WorkingDirectory>
    </Exec>
  </Actions>
</Task>
